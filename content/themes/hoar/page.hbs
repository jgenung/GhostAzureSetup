{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
{{> post-header}}

{{> menu-top}}

<main class="content" role="main">

    <article class="{{post_class}}">
		<div class="post-inner">

			{{! Everything inside the #post tags pulls data from the post }}
			{{#post}}

			<div class="column-left">
				<span class="post-meta">
					<time datetime="{{date format='YYYY-MM-DD'}}">
						<span>{{date format="DD"}}</span>
						<span>{{date format="MMMM"}}</span>
						<span>{{date format="YYYY"}}</span>
					</time>
				</span>
			</div>

			<div class="column-right">
				<div class="post-header">
					<h1 class="post-title">{{{title}}}</h1>
				</div>

				<span class="post-meta clearfix">
					{{#if tags}}<span><i class="fa fa-tag"></i>{{name}} {{tags}}</span>{{/if}}
				</span>

				<section class="post-content">
					{{content}}
				</section>

				<footer class="post-footer">

					{{! this is block for social share links(facebook, twitter, google+) /partials/share-block.hbs }}
					{{> share-block}}
				</footer>
			</div>

			<br/>

			<div class="column-right author">
				{{#if author}}
				<section class="clearfix">
					<div class="img-wrapper"><img width="80" src="{{author.image}}" alt=""/></div>
					<h4>{{author}}</h4>
					<p>{{author.bio}}</p>
				</section>
				{{/if}}
			</div>

			{{/post}}
		</div>

    </article>

	<div class="to_top">
		<a href="#"><i class="fa fa-arrow-circle-up"></i></a>
	</div>

</main>