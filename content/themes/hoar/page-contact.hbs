        <footer class="post-footer">

          {{! this is block for social share links(facebook, twitter, google+) /partials/share-block.hbs }}
          {{> share-block}}
        </footer>
      </div>

      <br/>

      <div class="column-right author">
        {{#if author}}
        <section class="clearfix">
          <div class="img-wrapper"><img width="80" src="{{author.image}}" alt=""/></div>
          <h4>{{author}}</h4>
          <p>{{author.bio}}</p>
        </section>
        {{/if}}
      </div>

      {{/post}}
    </div>

    </article>

