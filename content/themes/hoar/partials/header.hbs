<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
<div class="dotted_bg"></div>
<div class="site-head-inner">
	<div class="vertical">
		<div id="site-head-content" class="inner">

			{{#if @blog.logo}}
			<a id="blog-logo" href="{{@blog.url}}">
				<img src="{{@blog.logo}}" alt="Blog Logo" />
			</a>
			{{else}}
			<a id="blog-logo" class="default" href="{{@blog.url}}"></a>
			{{/if}}

			<h1 class="blog-title">{{@blog.title}}</h1>
			<h2 class="blog-description">{{@blog.description}}</h2>
		</div>
	</div>

	{{! Here include follow me links }}
	{{> follow-block}}
</div>
</header>